pipeline
{
    agent any
    tools{
        maven 'Maven'
    }
    stages{
        stage('checkout')
        {
            steps
            {
                echo 'checkout successfully completed'
    }
}
        stage('Build')
        {
            steps{
                echo 'build started'
                sh 'cd java-based/spring-boot-app'
                echo 'build succed'
            }
            
        }    
        stage('test')
        {
            steps{
                echo 'test started'
                sh 'cd java-based/spring-boot-app && mvn test'
                echo 'test succed'
            }
            
        }    
    }
    
}
